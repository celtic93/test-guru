<h1 class="nav user"><%= link_to 'TestGuru', root_path %></h1>

<% if user_signed_in? %>
  <p class="nav user">
    <%= t('.welcome') %> <b><%= current_user.username %></b> Guru
    <br><%= link_to t('.logout'), destroy_user_session_path,
                    method: :delete,
                    data: { confirm: t('.confirm') } %>
  </p>
<% else %>
  <p class="nav user">
    <%= link_to t('.login'), new_user_session_path %> |
    <%= link_to t('.signup'), new_user_registration_path %>
  </p>
<% end %>
