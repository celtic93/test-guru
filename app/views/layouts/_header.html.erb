<h1 class="nav user"><%= link_to 'TestGuru', root_path %></h1>

<% if logged_in? %>
  <p class="nav user">
    Welcome, <b><%= current_user.username %></b> Guru
    <br><%= link_to 'Logout', logout_path,
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
  </p>
<% else %>
  <p class="nav user">
    <%= link_to 'Login', login_path %> |
    <%= link_to 'SignUp', signup_path %>
  </p>
<% end %>
