<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'alert alert-danger resource-errors' do %>
    <h2><%= t('.header', count: resource.errors.count) %></h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
